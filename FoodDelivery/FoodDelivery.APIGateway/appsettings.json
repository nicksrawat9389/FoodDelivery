{
  "Jwt": {
    "Issuer": "https://FoodDelivery.com",
    "Audience": "https://FoodDelivery.com",
    "SecretKey": "jwttokenSecretjwtTokenSecretjwttokenSecretjwtTokenSecretjwttokenSecretjwtTokenSecret"
  },
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "ReverseProxy": {
    "Routes": {
      "delivery-route": {
        "ClusterId": "delivery-cluster",
        "AuthorizationPolicy": "authenticated",
        "Match": {
          "Path": "/delivery-service/{**catch-all}"
        },
        "Transforms": [
          { "PathPattern": "{**catch-all}" }
        ]
      },
      "order-route": {
        "ClusterId": "order-cluster",
        "AuthorizationPolicy": "authenticated",
        "Match": {
          "Path": "/order-service/{**catch-all}"
        },
        "Transforms": [
          { "PathPattern": "{**catch-all}" }
        ]
      },
      "restaurant-route": {
        "ClusterId": "restaurant-cluster",
        "AuthorizationPolicy": "authenticated",
        "Match": {
          "Path": "/restaurant-service/{**catch-all}"
        },
        "Transforms": [
          { "PathPattern": "{**catch-all}" }
        ]
      }
    },
    "Clusters": {
      "delivery-cluster": {
        "Destinations": {
          "destination1": {
            "Address": "https://localhost:7600/"
          }
        }
      },
      "order-cluster": {
        "Destinations": {
          "destination1": {
            "Address": "https://localhost:7630/"
          }
        }
      },
      "restaurant-cluster": {
        "Destinations": {
          "destination1": {
            "Address": "https://localhost:8680/"
          }
        }
      }
    }
  }
}
